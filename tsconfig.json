{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["config/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "webpack",
    "jest",
    "tslint:latest",
    "tslint-config-prettier",
    "**/fixtures",
    "**/*.test.ts",
    "**/__tests__",
    "**/*.spec.ts",
    "mock",
    "**/*._mock.ts"
  ]
}
